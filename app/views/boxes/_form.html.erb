<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      <%= form_with model: box, remote: true do |f| %>
        <div class='form-group'>
          <%= f.label :location %>
          <%= f.text_field :location, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :kind %>
          <%= f.select :kind, Box.kinds.keys, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.submit class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
