<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h3><%= link_to 'Boxes', boxes_path %> &mdash; <%= @box.display_tag %></h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <%= link_to 'Edit', edit_box_path(@box), class: 'btn btn-outline-primary' %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <h5>Location</h5>
      <%= @box.location %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <h5>Items</h5>
      <div class='container'>
        <div class='row'>
          <div class='col-md-4'>
            <%= form_with model: [@box, Item.new], local: true, class: 'form-inline' do |f| %>
              <div class='input-group mb-2 mr-sm-2'>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Add Item' %>
                <%= f.submit 'Add', class: 'btn btn-primary input-group-btn' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class='row'>
          <div class='col-md-6'>
            <ul class="list-group">
              <% @box.items.order(name: :asc).each do |item| %>
                <li class="list-group-item box-item">
                  <div><%= item.name %></div>
                  <div><%= link_to 'delete', box_item_path(@box, item), method: :delete %></div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <div>
    </div>
  </div>
</div>
